template(name="board")
  if gameEnded
    .well
      h3 Game over
      hr.star-well
      h4 #{game.winner} has won the game!
  else
    div(id="board", style="width: #{boardWidth}px; height: #{boardHeight}px;")
      +_tiles(rows=tiles show_start=false)

      br
      each markers
        div(class=marker_class, style=position, data-toggle="tooltip" data-placement="top" data-container="body" title="This is a respawn location")
          img(src= path, style=direction )
      each robots
        div(class=robot_class, style=position )
          img(src= path, style=direction)
          if poweredDown
            img(src='/Power_Off.png',class='robot-off')
      each shots
        div(class="laser #{laser_class}", style=shot)
      each selectOptions
        div(class=select_class, style=position, data-x=x, data-y=y, data-dir=dir, 
          data-toggle="tooltip" data-placement="top" data-container="body" title=title)
  .myRobot
    if inGame
      a.btn.btn-danger.cancel Leave game
