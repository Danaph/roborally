template(name="cards")
  h3 #{gameState} #{timer}
  hr.star-well
  if showCards
    h5
      | Your hand
    div.hand
      each availableCards
        +card
    h5
      | Playing
    div.playing
      each chosenCards
        +card
      each lockedCardsHtml
        +card
    //- div.power
      //- img.powerBtn(src=powerState)
    if showPlayButton
      a.btn.btn-success.playBtn.disabled play cards
  else
    each players
      h5 
        | #{name}: 
        div
          each playedCardsHtml
            +card

template(name="card")
  .card(class="#{type} #{class} #{cardId}" data-toggle='tooltip' title='#{title}')
    span= priority
