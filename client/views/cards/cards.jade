template(name="cards")
  h3 #{gameState} #{timer}
  hr.star-well
  if showCards
    h5
      | Your hand
    div.hand
      each availableCards
        +card
    h5
      | Playing
    div.playing
      each chosenCards
        +card
      each lockedCardsHtml
        +card
      if poweredDown
        img.powerBtn(src=ownPowerState)
    div.power
      h5
        | Power state
      img.powerBtn(src=ownPowerState)
    if showPlayButton
      if poweredDown
        a.btn.btn-success.playBtn play cards
      else
        a.btn.btn-success.playBtn.disabled play cards
  else
    each players
      h5 
        | #{name}: 
        div
          each playedCardsHtml
            +card
          if showPowerState
            img.powerBtn(src=powerState)
template(name="card")
  if emptyCard
    .card(class="empty #{selected}" data-toggle='tooltip' title='#{title}')
  else
    .card(class="#{type} #{class} #{cardId}" data-toggle='tooltip' title='#{title}')
      span= priority
